@model InstructorCreateVM

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Fullname</label>
        <input asp-for="Fullname" class="form-control">
        <span class="text-danger" asp-validation-for="Fullname"></span>
    </div>
    <div class="form-group">
        <label>Position</label>
        <input asp-for="Position" class="form-control">
        <span class="text-danger" asp-validation-for="Position"></span>
    </div>
    <div class="form-group">
        <label>ImageFile</label>
        <input asp-for="ImageFile" class="form-control">
        <span class="text-danger" asp-validation-for="ImageFile"></span>
    </div>
    <button asp-action="Create" type="submit" class="btn btn-success">Submit</button>
    <a asp-action="Index" type="button" class="btn btn-light">Cancel</a>

</form>