@model InstructorUpdateVM

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Fullname</label>
        <input asp-for="Fullname" class="form-control">
        <span class="text-danger" asp-validation-for="Fullname"></span>
    </div>
    <div class="form-group">
        <label>Position</label>
        <input asp-for="Position" class="form-control">
        <span class="text-danger" asp-validation-for="Position"></span>
    </div>
    <div class="form-group">
        <label>ImageFile</label>
        <input asp-for="ImageFile" class="form-control">
        <span class="text-danger" asp-validation-for="ImageFile"></span>
    </div>
    @if (Model.IsDeleted)
    {
        <div class="form-check">
            <input asp-for="IsDeleted" class="form-check-input" type="checkbox" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                IsDeleted
            </label>
        </div>
    }
    <button asp-action="Update" type="submit" class="btn btn-success">Submit</button>
    <a asp-action="Index" type="button" class="btn btn-light">Cancel</a>

</form>